{
  "name": "Kernel Build Environment",
  "image": "opensuse/tumbleweed:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  
  "postCreateCommand": [
    "zypper", "--non-interactive", "ref", "&&",
    "zypper", "--non-interactive", "--gpg-auto-import-keys", "install",
    "neovim", "git", "bash", "bc", "bison", "flex", "gcc", "make",
    "bash", "bc", "bison", "flex", "gcc", "make", "ncurses-devel", 
    "perl", "rpm-build", "tar", "xz", "wget", "curl", "libelf-devel", 
    "libuuid-devel", "libblkid-devel", "libselinux-devel", "zlib-devel", 
    "libopenssl-devel", "libcap-devel", "libattr-devel", "libseccomp-devel", 
    "gettext-tools", "elfutils", "gnu_parallel", "python3", "python3-devel", 
    "git", "fakeroot", "dwarves"
  ],
  
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  
  "mounts": [
    "source=codespace-cache,target=/tmp,type=volume"
  ]
}
