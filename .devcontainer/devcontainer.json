{
  "name": "Linux Kernel Build Environment",
  "build": {
    "dockerfile": "../docker/tumbleweed.Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "timonwong.shellcheck",
        "EditorConfig.EditorConfig",
        "eamodio.gitlens",
        "GitHub.copilot",
        "GitHub.vscode-github-actions"
      ]
    }
  },
  "remoteUser": "root",
  "postCreateCommand": "bash scripts/local/setup-dev-env.sh"
}